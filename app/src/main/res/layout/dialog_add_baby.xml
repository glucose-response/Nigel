<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_add_baby.xml -->
<!-- Used ChatGPT -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <ImageView
        android:layout_width="351dp"
        android:layout_height="242dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/favicon" />

    <!-- NigID Input -->

    <!-- Gestational Age Input -->

    <EditText
        android:id="@+id/editTextBabyID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="NigID"
        android:inputType="text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextGestAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBabyID"
        android:layout_marginTop="8dp"
        android:hint="Gestational Age (Weeks)"
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBabyID"
        android:layout_marginTop="61dp"
        android:hint="Weight (kg)"
        android:inputType="number"
        android:textSize="18sp" />

    <!-- Date of Birth Input -->

    <EditText
        android:id="@+id/editTextDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:inputType="date"
        android:layout_marginTop="8dp"
        android:textSize="18sp"/>

    <!-- Group Selector -->
    <Spinner
        android:id="@+id/spinnerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDOB"
        android:layout_marginTop="8dp"
        android:textSize="18sp">
    </Spinner>

    <!-- Display Button -->

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerGroup"
        android:layout_marginTop="292dp"
        android:text="Add baby" />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Output: "
        android:layout_below="@id/addButton"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>

</RelativeLayout>
